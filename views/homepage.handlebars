<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}" target="_blank">{{title}}</a>
            </div>
            <div class="meta">
                Posted on {{format_date created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>